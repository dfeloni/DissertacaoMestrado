        <determinedBy question="O levantamento dos requisitos do projeto é realizado junto ao cliente/fornecedor/stakeholder do projeto?" weight="0.5">
          <evaluatesBy option="Não."/>
          <evaluatesBy option="Sim, é realizado em reuniões e visitas ao cliente." score="1.0"/>
        </determinedBy>
        <determinedBy question="O levantamento de requisitos é registrado para posterior análise e elaboração do escopo do projeto?" weight="0.25">
          <evaluatesBy option="Não."/>
          <evaluatesBy option="Sim, é realizada uma documentação informal que não é apresentada ao cliente para realização de ajustes." score="0.5"/>
          <evaluatesBy option="Sim, é realizada uma documentação formal que é apresentada ao cliente e depois atualizada com possíveis ajustes solicitados." score="1.0"/>
        </determinedBy>
        <determinedBy question="Após encerrado a definição do escopo do projeto é solicitada uma aprovação do documento?" weight="0.25">
          <evaluatesBy option="Não."/>
          <evaluatesBy option="Sim, mas é adicionada a documentação do projeto." score="0.25"/>
          <evaluatesBy option="Sim, sendo adicionada a documentação do projeto." score="1.0"/>
        </determinedBy>
        <definesComplianceLevel name="Não atendido" description="Determina que o item avaliado não está em conformidade com o que é esperado pelo modelo, necessitando de revisão do processo." maxValue="0.45"/>
        <definesComplianceLevel name="Atendido parcialmente" description="Determina que o item avaliado possui é atendido com ressalvas, necessitando de pequenos ajustes para estar aderente ao modelo." minValue="0.46" maxValue="0.75"/>
        <definesComplianceLevel name="Totalmente atendido" description="Determina que o item avaliado está totalmente atendido, sem necessidade de ajustes." minValue="0.76" maxValue="1.0"/>
      </evaluates>
    </organizes>
  </performSubjectiveEvaluation>
